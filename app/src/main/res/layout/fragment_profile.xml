<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        <ImageView-->
<!--            android:id="@+id/pf_img"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="150dp"-->
<!--            android:src="@drawable/logo" />-->
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo2"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pf_btn_avt"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/red_button_background"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Choose avatar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"

            android:text="Username"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pf_name"
            android:layout_width="match_parent"
            android:background="@drawable/textedit_background"

            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:text="E-mail"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pf_email"
            android:layout_width="match_parent"

            android:enabled="false"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/textedit_background"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Time Registed"
            android:layout_marginBottom="2dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pf_time"
            android:layout_width="match_parent"

            android:ems="10"
            android:enabled="false"
            android:background="@drawable/textedit_background"
            android:inputType="date"
            android:layout_height="50dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pf_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/red_button_background"
                android:layout_marginTop="10dp"
                android:text="Change" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pf_cancel"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:background="@drawable/red_button_background"
                android:layout_height="wrap_content"
                android:text="Cancel" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>